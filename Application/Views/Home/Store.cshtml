
@using PagedList;
@using PagedList.Mvc;
@model Application.Models.ViewModel
@{
    ViewBag.Title = "Store";
    Layout = "~/Views/Shared/PageLayoutSec.cshtml";
}

<head>
    <title>BangThisBag  | Store</title>
</head>

<div class="shop_sidebar_area">

    <!-- ##### Single Widget ##### -->
    <div class="widget catagory mb-50">
        <!-- Widget Title -->


        <!--  Catagories  -->
        <div class="catagories-menu">
            <form action="@Request.Path" method="post">
                <div class="widget brands mb-50">
                    <!-- Widget Title -->
                    <h6 class="widget-title mb-30">Brands</h6>
                    @foreach (var item in Model.categories)
                    {

                        <div class="widget-desc">
                            <!-- Single Form Check -->
                                <div class="form-check p-2">
                                    <input onChange='submit();' class="form-check-input " style="display:none" type="checkbox" name="SearchFilter" value="@item" id="@item">
                                    <label class="form-check-label" for="@item">@item</label>
                                </div>

                        </div>

                    }
                </div>
               
                   

                
            </form>
        </div>
    </div>

</div>

<div class="amado_product_area ">
    <div class="row m-2" style="justify-content: center;">
        <div class="col-10">
            <a  href="/Home/Store"> <h1 class="p-4 animate__animated animate__bounceInDown bests title  " style="text-align: center !important; ">Store</h1></a>
        </div>
    </div>


    <div class="container-fluid">


        <div class="row  ">
            <div class="col-12">
                <div class="product-topbar d-xl-flex align-items-end justify-content-between">
                    <!-- Total Products -->

                    <div class="total-products">

                        <div class="view d-flex">
                            <a href="#"><i class="fa fa-th-large" aria-hidden="true"></i></a>
                            <a href="#"><i class="fa fa-bars" aria-hidden="true"></i></a>
                        </div>
                    </div>
                    <!-- Sorting -->
                    <form id="myForm" action="@Request.Path" method="post">
                        <div style="color: #fbb808">
                            <div class="search">
                                <input name="SearchFilter" id="SearchFilter" type="text" class="searchTerm p-3" style="border: 3px solid #fbb808; width:100%" placeholder="What are you looking for?">
                                <button type="submit" class="searchButton" style="background-color:black; border:4px;">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="row">

            @foreach (var item in Model.PagedlistBag)
            {
                <!-- Single Product Area -->
                <div class="col-12 col-sm-6 col-md-12 col-xl-6 ">
                    <div class="single-product-wrapper border  " style="box-shadow:  5px 10px 8px #888888; ">
                        <!-- Product Image -->
                        <div  class="product-img ">
                            <a href="/Home/BagDetail/@item.Id">  <img src="@item.ImageUrl" alt="@item.ImageUrl"></a>
                         
                        </div>

                        <!-- Product Description -->
                        <div class="product-description d-flex align-items-center justify-content-between">
                            <!-- Product Meta Data -->
                            <div class="product-meta-data p-2">
                                <div class="line"></div>
                                <div>
                                    <p class="product-price">$@item.Price</p>

                                </div>
                                <a href="/Home/BagDetail/@item.Id">
                                    <h6>@item.Model</h6>
                                    <p class=py-4>@item.Title</p>
                                </a>

                            </div>
                            <!-- Ratings & Cart -->
                            <div class="ratings-cart text-right mr-3">
                                <div class="ratings" style="margin-top:-5rem;">
                                    <i class="fa fa-star" aria-hidden="true"></i>
                                    <i class="fa fa-star" aria-hidden="true"></i>
                                    <i class="fa fa-star" aria-hidden="true"></i>
                                    <i class="fa fa-star" aria-hidden="true"></i>
                                    <i class="fa fa-star" aria-hidden="true"></i>
                                </div>

                                <div class="cart">
                                    <a href="#" data-toggle="tooltip" data-placement="left" title="Add to Cart"><img src="~/Content/mainpage/img/core-img/cart.png" alt=""></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


            }


        </div>
    </div>

    <div class="row pb-2">
        <div class="col-12">
            <!-- Pagination -->
            <nav aria-label="navigation">
                <ul class="pagination justify-content-end  mt-50">
                    @Html.PagedListPager((IPagedList)Model.PagedlistBag, page => Url.Action("Store", new { page }), new PagedListRenderOptions()
                      {
                          LiElementClasses = new List<string> { "page-link" }
                      })
                </ul>
            </nav>
        </div>
    </div>
</div>

