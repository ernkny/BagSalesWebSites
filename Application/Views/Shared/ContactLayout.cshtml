    <!-- Popper js -->
    <script src="~/Content/mainpage/js/popper.min.js"></script>
    <!-- Bootstrap js -->
    <script src="~/Content/mainpage/js/bootstrap.min.js"></script>
    <!-- Plugins js -->
    <script src="~/Content/mainpage/js/plugins.js"></script>
    <!-- Active js -->
    <script src="~/Content/mainpage/js/active.js"></script>
    <!-- Animate js -->
    <script src="~/Content/mainpage/js/animate.js"></script>

