        <!-- Header Area Start -->
        <header class="header-area clearfix">
            <!-- Close Icon -->
            <div class="nav-close">
                <i class="fa fa-close" aria-hidden="true"></i>
            </div>
            <!-- Logo -->
            <div class="logo">
                <a href="/Home/Index"><img src="~/Content/mainpage/img/core-img/logo.png" alt=""></a>
            </div>
            <!-- BangThisBag Nav -->
            <nav class="amado-nav">
                <ul>
                    <li><a href="/Home/Index">Home</a></li>
                    <li><a href="/Home/Store">Store</a></li>
                    <li><a href="/Home/Contact">Contact</a></li>
                    <li><a href="/Home/About">About Us</a></li>
                </ul>
            </nav>
            <!-- Button Group -->
            <div class="amado-btn-group mt-30 mb-100">

                <a href="/Home/NewThisWeek" class="btn amado-btn active">New this week</a>
            </div>
            <!-- Cart Menu -->
            <div class="cart-fav-search mb-100">

                <a href="#" class="search-nav"><img class="search-nav" src="~/Content/mainpage/img/core-img/search.png" alt=""> Search</a>
            </div>
            <!-- Social Button -->
            <div class="social-info d-flex justify-content-between">
                <a href="#"><i class="fa fa-pinterest" aria-hidden="true"></i></a>
                <a href="#"><i class="fa fa-instagram" aria-hidden="true"></i></a>
                <a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a>
                <a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a>
            </div>
        </header>
        <!-- Header Area End -->


        @RenderBody()



    </div>

    <div class="border-bottom border-top border-warning " style="background-color: #3C3C3C;">

        <div class="container pt-4">
            <div class="row  animate__animated animate__slower animate__infinite" id="cardposition">
                <div style="text-align: center;" class="col-md-4 col-sm-12 pt-2  ">
                    <div class=" mb-3">
                        <div class="" style="text-align: center;"><i class="fas fa-shipping-fast"></i></div>
                        <div class="card-body">
                            <h5 class="card-title">FAST SHİPPİNG</h5>
                            <p class="card-text" style="text-transform:capitalize">Our company is shipping your orders to best and fast way <span style="color:wheat">just 99&#36;</span> to you.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 col-sm-12 pt-2 ">
                    <div class=" mb-3">
                        <div class="" style="text-align: center;"><i class="fas fa-handshake"></i></div>
                        <div class="card-body">
                            <h5 class="card-title">TRUSTED SHOPPİNG</h5>
                            <p class="card-text"style="text-transform:capitalize">Trust is the most important things to trade and our company is attaching importance to trust of customers.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 col-sm-12 pt-2">
                    <div class=" mb-3">
                        <div class="" style="text-align: center;"><i class="fas fa-shopping-bag"></i></div>
                        <div class="card-body">
                            <h5 class="card-title"style="text-transform:capitalize">BRAND PRODUCTS</h5>
                            <p class="card-text">We take care to produce our bags in the best quality way.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- ##### Footer Area Start ##### -->
    <footer class="footer_area clearfix">
        <div class="container">
            <div class="row align-items-center">
                <!-- Single Widget Area -->
                <div class="col-12 col-lg-4">
                    <div class="single_widget_area">
                        <!-- Logo -->
                        <div class="footer-logo mr-50">
                            <a href="/Home/Index"><img src="~/Content/mainpage/img/core-img/logo2.png" alt=""></a>
                        </div>
                        <!-- Copywrite Text -->
                        <p class="copywrite">
                            Copyright &copy;
