@model Entities.Concrete.Bag 
@{
    ViewBag.Title = "BagAdd";
    Layout = "~/Views/Shared/LayoutPanel.cshtml";
    
    
}

<head>
    <link rel="stylesheet" href="~/Content/css/panel/stilpanel.css" />
   <script src="~/Scripts/ckeditor/ckeditor.js"></script>
</head>
<div style="padding-top:10px;">
    <div class="container border p-2 shadow p-3 mb-5 bg-white rounded">
       
        <div>
            <p class="alert-danger"> @TempData["errorMessages"] </p>
        </div>
        <form method="post" enctype="multipart/form-data">
            <div class="form-group ">
                <label>Model</label>
                <input type="text" class="form-control" name="Model" required>
                <hr />

                <label>Başlık</label>
                <input type="text" class="form-control" name="Title" required>
                <hr />

                <label>Keywords</label>
                <input type="text" class="form-control" name="Keywords" required>
                <hr />

                <label>Ekleniş Tarihi</label>
                <input type="datetime-local" class="form-control" name="Date" required>
                <hr />

                <label>Fiyat</label>
                <input type="number" class="form-control" name="Price" required>
                <hr />

                <label>Stock Durumu</label>
                <div style="margin-top:70px; padding:10px;" class="input-group-text">
                    Stockta <input type="radio" name="InStock" aria-label="Checkbox for following text input" class="m-1" value="true" required>
                    Stockta Yok <input type="radio" name="InStock" aria-label="Checkbox for following text input" class="m-1" value="false" required>
                </div>
                <hr />

                <label>Vitrin</label>
                <div style="margin-top:70px; padding:10px;" class="input-group-text">
                    Gözüksün <input type="radio" name="Showcase" aria-label="Checkbox for following text input" class="m-1" value="true" required>
                    Gözükmesin <input type="radio" name="Showcase" aria-label="Checkbox for following text input" class="m-1" value="false" required>
                </div>
                <hr />

                <label>Resimler</label>
                <input type="file" class="form-control" name="files" multiple required>
                <hr />

                <div><label style="position:relative">Açıklama</label></div>
                <div class="form-group" style="margin-top:70px;">
                    <textarea type="text" class="form-control" name="Description" id="Aciklama" required></textarea>
                </div>
                <hr />

                <button class="btn btn-primary">
                    Ürünü Ekle
                </button>
            </div>
        </form>
    </div>
</div>

<script type="text/javascript">
    CKEDITOR.replace('Aciklama');
</script>