@model Application.Models.ViewModel
@{
    ViewBag.Title = "BagBring";
    Layout = "~/Views/Shared/LayoutPanel.cshtml";
}

<head>
    <link rel="stylesheet" href="~/Content/css/panel/stilpanel.css" />
    <script src="~/Scripts/ckeditor/ckeditor.js"></script>
</head>
<div style="padding-top:10px;">
    <div class="container border p-2 shadow p-3 mb-5 bg-white rounded">

        
        <form method="post" enctype="multipart/form-data">
            <div class="form-group ">


                <label>Model</label>
                <input type="text" class="form-control" name="Model" value="@Model.IEnumBag.Model" required>
                <hr />

                <label>Başlık</label>
                <input type="text" class="form-control" name="Title" value="@Model.IEnumBag.Title" required>
                <hr />

                <label>Keywords</label>
                <input type="text" class="form-control" name="Keywords" value="@Model.IEnumBag.Keywords" required>
                <hr />

                <label>Ekleniş Tarihi</label>
                <input type="datetime-local" class="form-control" name="Date">

                <hr />

                <label>Fiyat</label>
                <input type="number" class="form-control" name="Price" value="@Model.IEnumBag.Price" required>
                <hr />

                <label>Stock Durumu</label>
                <div style="margin-top:70px; padding:10px;" class="input-group-text">
                    Stockta <input type="radio" name="InStock" aria-label="Checkbox for following text input" class="m-1" value="true" required>
                    Stockta Yok <input type="radio" name="InStock" aria-label="Checkbox for following text input" class="m-1" value="false" required>
                </div>
                <hr />

                <label>Vitrin</label>
                <div style="margin-top:70px; padding:10px;" class="input-group-text">
                    Gözüksün <input type="radio" name="Showcase" aria-label="Checkbox for following text input" class="m-1" value="true" required>
                    Gözükmesin <input type="radio" name="Showcase" aria-label="Checkbox for following text input" class="m-1" value="false" required>
                </div>
                <hr />

                <label class="mr-4">Resimler</label>
                <div class="imagesoutside ">
                    @foreach (var item in Model.IEnumImageBag)
                    {
                        <div>
                            <input type="radio" id="image" name="ImageUrl" value="@item.ImageUrl">
                            <img src="@item.ImageUrl" width="200px" height="200px"><br>
                        </div>
                    }


                </div>

                <hr />

                <div><label style="position:relative">Açıklama</label></div>
                <div class="form-group" style="margin-top:70px;">
                    <textarea type="text" class="form-control" name="Description" id="Aciklama" required>@Model.IEnumBag.Description</textarea>
                </div>
                <hr />


                <button class="btn btn-primary">
                    Ürünü Güncelle
                </button>
            </div>
        </form>
    </div>
</div>

<script type="text/javascript">
    CKEDITOR.replace('Aciklama');
</script>

